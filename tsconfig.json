{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "dist",
    "node_modules",
  ]
}
